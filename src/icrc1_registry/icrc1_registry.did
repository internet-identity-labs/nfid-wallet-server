type Conf = record {
    im_canister : opt text
};

type ICRC1 = record {
    state : ICRC1State;
    ledger : text
};

type ICRC1State = variant {
    Inactive;
    Active
};

service : (Conf) -> {
    get_canisters_by_root : (text) -> (vec ICRC1) query;
    remove_icrc1_canister : (text) -> ();
    store_icrc1_canister : (text, ICRC1State) -> ();
}